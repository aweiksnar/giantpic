<div class="container retina_wood">
  <div class="form_container">
    <form action="/images" method="post">
      <label for="title">Title:</label>
      <input name="picture[title]" /><br />

      <label for="url">Url:</label>
      <input name="picture[url]" /><br />

      <label for="caption">Caption:</label>
      <input name="picture[caption]" /><br />

      <input type="hidden" name="picture[user_id]" value="<%= session[:user_id] %>">

      <input name="save_picture" type="submit" value="Add Picture" class="inverse_btn" />
    </form>
  </div>
</div>
